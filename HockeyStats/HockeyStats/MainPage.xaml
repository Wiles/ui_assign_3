<Page
    x:Class="HockeyStats.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HockeyStats"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="18" Text="Player" />
                <TextBlock Grid.Column="1" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="18" Text="Team" />
                <TextBlock Grid.Column="2" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="18" Text="Goals" />
                <TextBlock Grid.Column="3" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="18" Text="Assists" />
                <TextBlock Grid.Column="4" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="18" Text="Penalty Minutes" />
                <TextBlock Grid.Column="5" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="18" Text="Points" />
            </Grid>
            <ListView Grid.Row="1" HorizontalAlignment="Stretch" x:Name="gvPlayers" ItemClick="gvPlayers_ItemClick">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Grid>
                                        <ContentPresenter Content="{TemplateBinding Content}" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch" Width="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" TextAlignment="Center" Text="{Binding Name}" />
                            <TextBlock Grid.Column="1" TextAlignment="Center" Text="{Binding Team}" />
                            <TextBlock Grid.Column="2" TextAlignment="Center" Text="{Binding Goals}" />
                            <TextBlock Grid.Column="3" TextAlignment="Center" Text="{Binding Assists}" />
                            <TextBlock Grid.Column="4" TextAlignment="Center" Text="{Binding PenaltyMinutes}" />
                            <TextBlock Grid.Column="5" TextAlignment="Center" Text="{Binding Points}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="tbName" Grid.Column="0" VerticalAlignment="Top" Margin="5,5,5,5" HorizontalAlignment="Stretch"/>
            <TextBox x:Name="tbTeam" Grid.Column="1" VerticalAlignment="Top" Margin="5,5,5,5" HorizontalAlignment="Stretch"/>
            <TextBox x:Name="tbGoals" Grid.Column="2" VerticalAlignment="Top" Margin="5,5,5,5" HorizontalAlignment="Stretch"/>
            <TextBox x:Name="tbAssists" Grid.Column="3" VerticalAlignment="Top" Margin="5,5,5,5" HorizontalAlignment="Stretch"/>
            <TextBox x:Name="tbPenalties" Grid.Column="4" VerticalAlignment="Top" Margin="5,5,5,5" HorizontalAlignment="Stretch"/>
            <Button x:Name="btnAdd" Content="Add" Grid.Column="5" VerticalAlignment="Top" Margin="5,5,5,5" HorizontalAlignment="Stretch" Click="Button_Click_1"/>
        </Grid>
        <StackPanel Grid.Column="0">
            <Button x:Name="btnStats" Content="Statistics" HorizontalAlignment="Center" Width="100" Height="100" Margin="10,10,10,10"/>
            <Button x:Name="btnStandings" Content="Standings" HorizontalAlignment="Center" Width="100" Height="100" Margin="10,0,10,10"/>
            <Button x:Name="btnOpen" Content="Open" HorizontalAlignment="Center" Width="100" Height="100" Margin="10,0,10,10" Click="btnOpen_Click"/>
            <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Center" Width="100" Height="100" Margin="10,0,10,10" Click="btnSave_Click"/>
            <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Center" Width="100" Height="100" Margin="10,0,10,10" Click="btnExport_Click"/>
        </StackPanel>
    </Grid>
</Page>
